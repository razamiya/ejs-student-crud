                        <label for="uplode-student-photo">
                            <img width="50px" src="https://static.thenounproject.com/png/212328-200.png" alt="">
                        </label>

                        <input type="file" name="studentPhoto" id="uplode-student-photo">
                    </div>

                    <div class="my-3">
                        <input class="btn btn-primary w-100" type="submit" value="Create" name="" id="">

                    </div>


                </form>

                </div>
            </div>
        </div>
    </div>

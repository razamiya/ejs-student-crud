

<div class="container my-5 student-single ">

    <div class="row my-6  justify-content-center">
        <div class="col-md-5">
            <div class="addNewSttudent">
                <a href="/student" class="btn btn-primary btn-sm">Back</a>
            </div>
            <div class="card shadow my-3">
                <div class="card-body">
                    <h2> <%= student.name %>  Single Information</h2>
                    <hr>

                    <% if (student.photo  == 'avatar.png') { %>
                        <img width="200px" src="/images/avatar.png" alt="">
                        <% } else { %>
                            <img width="200px" src="/images/student/<%= student.photo %>  " alt="">
                    <% } %>

                    <br>
                    <br>
                    <h4> Name : <%= student.name %> </h4>
                    <ul>
                        <li>Email : <%= student.email %> </li>
                        <li>Phone : <%= student.phone %> </li>
                        <li>Location : <%= student.location %> </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>